  <!-- MAIN FOOTER -->

  <div class="modal fade text-dark" id="contactModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
        </div>
        <div class="modal-body mt-0 pt-0 px-4">
          <h5 class="modal-title mx-auto mt-0 pt-0" id="contactModalTitle">
            Reach out
          </h5>
          <p class="about-inner-text">
            I would like to hear from you. Please send me a message by filling
            out the form bellow and I will get back to you shortly.
          </p>
          {{msg}}

          <form class="mt-3" class="contact-form" id="contact-form">
            <div class="form-group">
              <input type="text" name="name" class="form-control" placeholder="Name" />
            </div>
            <div class="form-group">
              <input type="email" name="email" class="form-control" placeholder="Email" />
            </div>
            <div class="form-group">
              <input type="text" name="subject" class="form-control" placeholder="Subject" />
            </div>
            <div class="form-group">
              <textarea class="form-control" name="message" placeholder="Message"></textarea>
            </div>

            <div class="modal-footer">
              <button type="submit" name="submit" value="Send Message" class="btn btn-secondary btn-block">
                Submit
              </button>
          </form>
        </div>

      </div>
      <small class="d-block mt-1  text-muted text-center pb-3">
        For other inquieries, reach out to
      </small>
    </div>
  </div>





  <!--MODAL-->
  <div class="modal" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">YOUR MESSAGE HAS BEEN SENT</h5>
          <button class="close" data-dismiss="modal">&times;</button>
        </div>
        <div modal="modal-body">
          <h1 id="modalBody"></h1>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

